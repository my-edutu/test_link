{
  "expo": {
    "name": "Lingualink AI",
    "slug": "lingualink-ai-nbxjn3",
    "version": "1.0.0",
    "scheme": "lingualink",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "updates": {
      "fallbackToCacheTimeout": 30000
    },
    "runtimeVersion": "1.0.0",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bernard.o.LinguaLink",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "lingualink",
            "CFBundleURLSchemes": [
              "lingualink"
            ]
          }
        ],
        "NSMicrophoneUsageDescription": "We use the microphone so you can record voice clips and go live.",
        "NSCameraUsageDescription": "We use the camera so you can stream video live.",
        "NSBluetoothAlwaysUsageDescription": "We use Bluetooth for audio device discovery during calls.",
        "UIBackgroundModes": [
          "audio",
          "voip",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF8A00"
      },
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.lingualink.com",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ],
          "data": [
            {
              "scheme": "lingualink"
            }
          ]
        }
      ],
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "useLegacyPackaging": false,
            "enableMinifyInReleaseBuilds": true
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "@livekit/react-native-expo-plugin",
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Lingualink AI to access your microphone for voice recording."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Lingualink AI to access your camera for video recording."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF8A00",
          "sounds": [],
          "defaultChannel": "default"
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      "expo-font",
      "expo-asset",
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "f34d2fe0-a211-450e-a84b-1a9b64765391"
      }
    }
  }
}
